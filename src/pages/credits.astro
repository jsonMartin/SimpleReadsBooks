---
import Layout from '../layouts/Layout.astro';
import ButtonBack from '../components/ButtonBack.svelte';
---

<Layout title="credits">
  <div class="max-w-2xl m-auto mb-5 prose-lg font-light">
    <section class="w-full flex flex-col justify-center items-center my-10">
      <h1 class="text-4xl font-extrabold">Credits</h1>

      <ButtonBack client:load />
    </section>

    <p>
      Website by <a
        class="text-blue-500 font-bold"
        href="https://jsonmart.in"
        >Jason Martin</a
      >
    </p>

    <p>Illustrations by <b>Sandamali Kamalchandra</b></p>

    <p class="-mb-5">Images</p>
    <ul class="list-disc">
      <li class="list-item">
        <span class="text-gray-500 font-thin">empty-kindergarten-room-with-rainbow-sky-wallpaper 16455786 [brgfx on Freepik.com]</span>
      </li>
    </ul>
  </div>
</Layout>
